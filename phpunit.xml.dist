<phpunit
  bootstrap="./phpunit-bootstrap.php"
  cacheResult="true"
  cacheResultFile="./phpunit.cache"
  resolveDependencies="true"
  executionOrder="random"
>
  <testsuites>
    <testsuite name="DaftObject">
      <directory>./vendor/signpostmarv/daft-object/Tests/</directory>
    </testsuite>
    <testsuite name="DaftObjectRepository">
      <directory>./Tests/DaftObjectRepository/</directory>
    </testsuite>
  </testsuites>
  <logging>
    <log
      type="coverage-html"
      target="phpunit"
    />
    <log
      type="coverage-clover"
      target="phpunit.clover"
    />
    <log
      type="coverage-text"
      target="php://stdout"
      showUncoveredFiles="true"
      showOnlySummary="false"
    />
  </logging>
  <filter>
    <whitelist processUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">./src/</directory>
      <directory suffix=".php">./Tests/</directory>
      <directory suffix=".php">./tests-src/</directory>
    </whitelist>
  </filter>
</phpunit>
