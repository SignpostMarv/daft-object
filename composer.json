{
    "name": "signpostmarv/daft-object",
    "description": "Daft Object",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "SignpostMarv",
            "email": "me@signpostmarv.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "SignpostMarv\\DaftObject\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SignpostMarv\\DaftObject\\": "./tests-src/",
            "SignpostMarv\\DaftObject\\PHPStan\\": "./PHPStan/",
            "SignpostMarv\\DaftObject\\Tests\\": "./Tests/"
        }
    },
    "config": {
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "scripts": {
        "tests": [
            "phpunit -vvvv --coverage-clover=phpunit.clover",
            "phpstan analyse -c ./phpstan.neon .php_cs.dist src PHPStan Tests",
            "psalm",
            "phpcpd ./src/ ./Tests/ ./tests-src/",
            "phpmnd ./ --exclude=./phpdoc/ --exclude=./phpunit/ --exclude=./vendor/ --non-zero-exit-on-violation --hint",
            "composer-require-checker check ./composer.json",
            "php-cs-fixer fix --verbose --allow-risky=yes --dry-run"
        ],
        "check-coverage-on-tests": [
            "php ./vendor/phpunit/phpunit/phpunit -vc ./phpunit-coverage-on-tests.xml"
        ]
    },
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^1.1",
        "phpstan/phpstan": "^0.10.7",
        "phpstan/phpstan-phpunit": "^0.10.0",
        "phpstan/phpstan-strict-rules": "^0.10.1",
        "phpunit/phpunit": "^7.5",
        "povils/phpmnd": "^2.0",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.1",
        "signpostmarv/php-cs-fixer-config": "^0.6.0",
        "vimeo/psalm": "^3.0"
    }
}
